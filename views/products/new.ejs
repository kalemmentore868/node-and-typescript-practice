<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">New Product</h1>
        <div class="col-6 offset-3">
            <form action="/products" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="product[title]" required>
                    <div class="valid-feedback">
                        Yuh orn like boil corn!
                      </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" name="product[price]" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                      </div>
                      <div class="valid-feedback">
                        Yuh orn like boil corn!
                      </div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input type="text" class="form-control" id="image" name="product[image]" required>
                    <div class="valid-feedback">
                        Yuh orn like boil corn!
                      </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" name="product[description]" required></textarea>
                    <div class="valid-feedback">
                        Yuh orn like boil corn!
                      </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Add Product</button>
                </div>
                
            </form>
            <a href="/products">All Products</a>
        
        </div>
    </div>

   