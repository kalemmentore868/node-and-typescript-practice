<% layout("layouts/boilerplate") %>
    <h1>All Products</h1>
    <div>
        <a href="/products/new">Add Product</a>
    </div>
   
        <% for (let product of products) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= product.image %>" alt="image of <%= product.title %>" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.title %></h5>
                            <p class="card-text"><%= product.description %></p>
                            <p class="card-text">
                                <small class="text-muted">$<%= product.price %> TT</small>    
                            </p>
                            <a class="btn btn-primary" href="/products/<%= product._id %>">View <%= product.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    
    
