<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">Edit Product</h1>
        <div class="col-6 offset-3">
            <form action="/products/<%= product._id %>?_method=PUT" class="needs-validation" method="POST" novalidate
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="product[title]" required value="<%= product.title %>">
                    <div class="valid-feedback">
                        Yuh orn like boil corn!
                      </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" name="product[price]" id="price" required value="<%= product.price %>" aria-label="price" aria-describedby="price-label">
                        <div class="valid-feedback">
                            Yuh orn like boil corn!
                          </div>
                    </div>
                </div>
                

                <div class="mb-3">
                    <label for="formFileMultiple" name="image" class="form-label">Add Images</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                  </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" required name="product[description]"><%= product.description %></textarea>
                    <div class="valid-feedback">
                        Yuh orn like boil corn!
                      </div>
                </div>

                <div class="mb-3">
                    <% product.images.forEach(function(img, i){ %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input id="image-<%=i%>" type="checkbox" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% }) %>
                </div>
                

                <div class="mb-3">
                    <button class="btn btn-info text-light">Update Product</button>
                </div>
                
            </form>
            <a href="/products/<%= product._id %>">Back to Product</a>
        
        </div>
    </div>